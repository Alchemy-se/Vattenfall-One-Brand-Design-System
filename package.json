{
  "name": "@vf-alchemy/vattenfall-design-system",
  "version": "7.1.0",
  "main": "index.js",
  "scripts": {
    "test": "yarn build",
    "build": "npm-run-all --sequential js-main css-main catalog-build",
    "catalog-start": "catalog start",
    "catalog-build": "catalog build",
    "css-main": "npm-run-all --sequential css-compile css-prefix css-minify css-copy",
    "css-compile": "node-sass --output-style expanded --source-map true --source-map-contents true --precision 6 scss/main.scss dist/css/main.css && node-sass --output-style expanded --source-map true --source-map-contents true --precision 6 scss/reboot.scss dist/css/reboot.css && node-sass --output-style expanded --source-map true --source-map-contents true --precision 6 scss/documentation.scss dist/css/documentation.css",
    "css-prefix": "postcss --config build/postcss.config.js --replace \"dist/css/*.css\" \"!dist/css/*.min.css\"",
    "css-minify": "cleancss --level 1 --format breaksWith=lf --source-map --source-map-inline-sources --output dist/css/main.min.css dist/css/main.css && cleancss --level 1 --format breaksWith=lf --source-map --source-map-inline-sources --output dist/css/reboot.min.css dist/css/reboot.css",
    "css-copy": "shx mkdir -p catalog/static/dist/ && shx cp -r dist/css/ catalog/static/dist/ && shx cp -r dist/fonts catalog/static/dist/",
    "watch": "npm-run-all --parallel watch-css watch-js catalog-start",
    "watch-css": "nodemon --watch scss/ --ext scss --exec \"npm run css-main\"",
    "watch-js": "nodemon --watch js/ --ext js --exec \"npm run js-main\"",
    "semantic-release": "semantic-release",
    "js-main": "npm-run-all --sequential js-build js-copy",
    "js-build": "webpack",
    "js-copy": "shx cp -r dist/js/ catalog/static/dist/"
  },
  "repository": "git@github.com:Alchemy-se/Vattenfall-One-Brand-Design-System.git",
  "author": "Daniel Mauno Pettersson <daniel@alchemy.se>",
  "license": "MIT",
  "devDependencies": {
    "@semantic-release/commit-analyzer": "^6.1.0",
    "@semantic-release/git": "^7.0.8",
    "@semantic-release/github": "^5.2.10",
    "@semantic-release/npm": "semantic-release/npm",
    "@semantic-release/release-notes-generator": "^7.1.2",
    "clean-css-cli": "^4.2.1",
    "node-sass": "^4.9.3",
    "nodemon": "^1.18.10",
    "npm-run-all": "^4.1.3",
    "postcss-cli": "^6.1.1",
    "semantic-release": "^15.13.3",
    "shx": "^0.3.2",
    "webpack": "^4.29.3",
    "webpack-cli": "^3.2.3"
  },
  "dependencies": {
    "@alchemy-se/catalog": "^4.4.3",
    "babel-loader": "7",
    "catalog": "^3.6.0",
    "react": "^16.5.1",
    "react-dom": "^16.5.1"
  },
  "release": {
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/npm",
      "@semantic-release/git",
      "@semantic-release/github"
    ]
  },
  "publishConfig": {
    "access": "public"
  }
}
